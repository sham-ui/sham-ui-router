<template>
    <a
        :hrefto={{ {
            'path': path,
            'params': params,
            'useActiveClass': useActiveClass,
            'activeClass': activeClass
        } }}
        class={{className}}
    >
        {{text}}
        {% defblock %}
    </a>
</template>

<script>
    import { options, inject, mergeWithTemplate } from 'sham-ui-macro/babel.macro';

    @mergeWithTemplate
    class LinkToComponent extends Template {
        @inject router;

        @options text = '';
        @options useActiveClass = false;
        @options activeClass = 'active';
        @options className = '';
        @options params = {};
    }

    export default LinkToComponent;
</script>